# Конфигурация book2ru-go (Go версия)
# Скопируйте этот файл как .book2ru-go.yml и настройте под свои нужды

# Модель для перевода
model: "google/gemini-flash-1.5"

# Промпт для перевода
prompt: "Translate this text to Russian. Only return the translated text, nothing else:"

# Размер батча в байтах (по умолчанию 10KB)
batch_size: 10000

# Количество попыток при ошибках
retry_attempts: 3

# Начальный батч (для восстановления после ошибок)
start_batch: 1

# Показывать метаданные в STDERR
metadata_footer: true

