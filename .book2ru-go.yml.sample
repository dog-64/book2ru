# Configuration for book2ru-go (Go version)
# Copy this file as .book2ru-go.yml and customize for your needs

# Translation model
model: "google/gemini-flash-1.5"

# Translation prompt
prompt: "Translate this text to Russian. Only return the translated text, nothing else:"

# Batch size in bytes (default 10KB)
batch_size: 10000

# Number of retry attempts on errors
retry_attempts: 3

# Starting batch (for recovery after errors)
start_batch: 1

# Show metadata in STDERR
metadata_footer: true

# Alternative models for experiments:
# model: "anthropic/claude-3-5-sonnet-20240620"
